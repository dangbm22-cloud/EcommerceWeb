@model EcommerceWeb.Models.Product

<section class="product-details spad">
    <div class="container">
        <div class="row">
            <!-- Ảnh sản phẩm -->
            <div class="col-lg-6 mb-4">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" />
            </div>

            <!-- Thông tin sản phẩm -->
            <div class="col-lg-6">
                <h3>@Model.Name</h3>
                <h4 class="text-danger">@string.Format("{0:N0} VND", @Model.Price)</h4>

                <div class="mt-3">
                    <h6><strong>Mô tả sản phẩm</strong></h6>
                    <p>@Model.Description</p>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <a asp-controller="Order" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-primary">
                        Thêm vào giỏ hàng
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        Quay lại Shop
                    </a>
                </div>
            </div>
        </div>

        <!-- Khu vực mô tả chi tiết (hiển thị sau này) -->
