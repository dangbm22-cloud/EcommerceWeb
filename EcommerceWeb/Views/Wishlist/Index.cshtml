@{
}
@model List<EcommerceWeb.Models.Product>

<section class="wishlist spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Sản phẩm yêu thích</h3>
            </div>
        </div>
        <div class="row">
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="product__item">
                            <div class="product__item__pic">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">
                                    <img src="@item.ImageUrl" alt="@item.Name" />
                                </a>
                            </div>
                            <div class="product__item__text">
                                <h6>
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">
                                        @item.Name
                                    </a>
                                </h6>
                                <span>@string.Format("{0:N0} VND", item.Price)</span>

                                <!-- Nút xóa khỏi wishlist -->
                                <form asp-controller="Wishlist" asp-action="Remove" method="post" class="mt-2">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Xóa khỏi yêu thích</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p>Danh sách yêu thích trống.</p>
                </div>
            }
        </div>
    </div>
</section>
