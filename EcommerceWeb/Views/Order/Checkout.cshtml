@model EcommerceWeb.ViewModels.CheckoutViewModel

<!-- Breadcrumb Section -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Checkout</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>Checkout</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Checkout Section -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <h4>Billing Details</h4>
            <form asp-action="Checkout" asp-controller="Order" method="post">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>First Name<span>*</span></p>
                                    <input asp-for="FirstName" type="text" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Last Name<span>*</span></p>
                                    <input asp-for="LastName" type="text" />
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input asp-for="Address" type="text" placeholder="Street Address" class="checkout__input__add" />
                        </div>
                        <div class="checkout__input">
                            <p>Town/City<span>*</span></p>
                            <input asp-for="City" type="text" />
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone<span>*</span></p>
                                    <input asp-for="Phone" type="text" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input asp-for="Email" type="text" />
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Order notes</p>
                            <input asp-for="Notes" type="text" placeholder="Notes about your order..." />
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Your Order</h4>
                            <div class="checkout__order__products">Products <span>Total</span></div>
                            <ul>
                                @foreach (var item in Model.CartItems)
                                {
                                    <li>
                                        @item.Product.Name x @item.Quantity
                                        <span>@(item.Product.Price* item.Quantity)</span>
                                    </li>
                                }
                            </ul>
                            <div class="checkout__order__subtotal">Subtotal <span>@Model.Subtotal</span></div>
                            <div class="checkout__order__total">Total <span>@Model.Total</span></div>

                            <div class="checkout__input__radio">
                                <label>
                                    <input type="radio" name="PaymentMethod" value="COD" checked />
                                    <span class="checkmark"></span>
                                    Thanh toán khi nhận hàng (COD)
                                </label>
                            </div>
                            <div class="checkout__input__radio">
                                <label>
                                    <input type="radio" name="PaymentMethod" value="Online" />
                                    <span class="checkmark"></span>
                                    Trả tiền Online
                                </label>
                            </div>
                            <button type="submit" class="site-btn">Đặt hàng</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
