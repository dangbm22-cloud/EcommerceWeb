@model List<EcommerceWeb.Models.CartItem>

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Shopping Cart</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>Shopping Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr data-product-id="@item.Product.Id">
                                        <td class="shoping__cart__item">
                                            <div class="cart__item__content">
                                                <img src="@item.Product.ImageUrl" alt="@item.Product.Name" class="cart-img" />
                                                <span>@item.Product.Name</span>
                                            </div>
                                        </td>
                                        <td class="shoping__cart__price">
                                            @string.Format("{0:N0}", item.Product.Price) VND
                                        </td>
                                        <td class="shoping__cart__quantity">
                                            <div class="quantity">
                                                <div class="pro-qty">
                                                    <span class="dec qtybtn">-</span>
                                                    <input type="number" value="@item.Quantity" min="1" />
                                                    <span class="inc qtybtn">+</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="shoping__cart__total">
                                            @string.Format("{0:N0}", item.Product.Price * item.Quantity) VND
                                        </td>
                                        <td class="shoping__cart__item__close">
                                            <a asp-controller="Order" asp-action="Remove" asp-route-id="@item.Product.Id">
                                                <span class="icon_close"></span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">Giỏ hàng của bạn đang trống</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Cart Total -->
        <div class="row">
            <div class="col-lg-6 offset-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    @{
                        var subtotal = Model?.Sum(i => i.Product.Price * i.Quantity) ?? 0;
                    }
                    <ul>
                        <li>Subtotal <span>@string.Format("{0:N0}", subtotal) VND</span></li>
                        <li>Total <span>@string.Format("{0:N0}", subtotal) VND</span></li>
                    </ul>
                    <a asp-controller="Order" asp-action="Checkout" class="primary-btn">PROCEED TO CHECKOUT</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->
<!-- Ẩn mũi tên lên/xuống trong input number -->
<style>
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Khi nhập trực tiếp số lượng
            $('.pro-qty input').on('change', function () {
                updateQuantity($(this));
            });

            // Khi click nút + -
            $('.qtybtn').on('click', function () {
                const $button = $(this);
                const $input = $button.siblings('input');
                let oldValue = parseInt($input.val());

                if ($button.hasClass('inc')) {
                    $input.val(oldValue + 1);
                } else {
                    if (oldValue > 1) {
                        $input.val(oldValue - 1);
                    }
                }

                updateQuantity($input); // Gọi trực tiếp, không trigger change
            });

            // Hàm AJAX cập nhật số lượng
            function updateQuantity(input) {
                const quantity = parseInt(input.val());
                const row = input.closest('tr');
                const id = row.data('product-id');

                $.ajax({
                    url: '/Order/UpdateQuantityAjax',
                    type: 'POST',
                    data: { id: id, quantity: quantity },
                    success: function (res) {
                        row.find('.shoping__cart__total').text(res.itemTotal.toLocaleString() + ' VND');
                        $('.shoping__checkout ul li:first span').text(res.cartTotal.toLocaleString() + ' VND');
                        $('.shoping__checkout ul li:last span').text(res.cartTotal.toLocaleString() + ' VND');
                    }
                });
            }
        });
    </script>
}
