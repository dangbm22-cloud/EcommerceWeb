@model EcommerceWeb.Models.Product

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    @* Thông tin sản phẩm khi nhấn vào*@
    <h2>@Model.Name</h2>

    <p><strong>Giá:</strong> @Model.Price.ToString("N0") VNĐ</p>
    <p><strong>Số lượng tồn:</strong> @Model.Stock</p>
    <p><strong>Mô tả:</strong> @Model.Description</p>
    <p><strong>Danh mục:</strong> @Model.Category?.Name</p>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mb-3">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="max-width:300px;" />
        </div>
    }

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Sửa</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Xóa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>
