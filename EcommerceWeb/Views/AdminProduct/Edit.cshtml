@model EcommerceWeb.ViewModels.ProductViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Sửa sản phẩm";
}

<div class="container mt-4">
    <h2 class="mb-3">Sửa sản phẩm</h2>

    <div asp-validation-summary="All" class="alert alert-danger"></div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <!-- Tên sản phẩm -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Giá -->
        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Số lượng tồn -->
        <div class="mb-3">
            <label asp-for="Stock" class="form-label"></label>
            <input asp-for="Stock" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <!-- Mô tả -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Danh mục -->
        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Danh mục</label>
            <select asp-for="CategoryId" class="form-select"
                    asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                <option value="">-- Chọn danh mục --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <!-- Ảnh hiện tại -->
        <div class="mb-3">
            <label>Ảnh hiện tại</label><br />
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" style="width:150px;" />
            }
        </div>

        <!-- Upload ảnh mới nếu muốn -->
        <div class="mb-3">
            <label for="ImageFile" class="form-label">Chọn ảnh mới (nếu muốn thay)</label>
            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
            <small class="text-muted">Hỗ trợ JPG, PNG, WEBP, tối đa ~5MB.</small>
        </div>

        <!-- Specifications -->
        <div class="mb-3">
            <h5>Thông số kỹ thuật</h5>
            <textarea name="SpecificationsText" class="form-control" rows="6" placeholder="Mỗi dòng: Thông số: Giá trị">
                @string.Join("\n", (Model.Specifications ?? new List<EcommerceWeb.ViewModels.SpecificationItem>())
                .Select(s => $"{s.Key}: {s.Value}"))
            </textarea>
            <small class="text-muted">Ví dụ: Socket: LGA 1151</small>
        </div>

        <!-- Nút lưu -->
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
