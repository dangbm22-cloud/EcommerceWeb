@model EcommerceWeb.Models.Product

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Xóa sản phẩm";
    @*Trang view này hiện ra khi nhấn vô nút delete trên trang quản lý sản phẩm*@
}

<div class="container mt-4">
    <h2>Bạn có chắc muốn xóa sản phẩm này?</h2>

    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded-start" />
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">Giá: @Model.Price.ToString("N0") đ</p>
                    <p class="card-text">Danh mục: @Model.Category?.Name</p>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
