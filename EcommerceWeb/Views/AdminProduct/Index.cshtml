@model IEnumerable<EcommerceWeb.Models.Product>

@{
    Layout = "_AdminLayout"; // Layout của Admin
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container mt-4">
    <h2 class="mb-3">Danh sách sản phẩm</h2>
    <a asp-action="Create" class="btn btn-success mb-3">+ Thêm sản phẩm mới</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Danh mục</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <!-- Dùng Url.Content để chuyển đúng đường dẫn -->
                            <img src="@item.ImageUrl" alt="@item.Name" style="width:80px; height:auto;" />
                        }
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("N0") đ</td>
                    <td>@item.Category?.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
