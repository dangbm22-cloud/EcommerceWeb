@model EcommerceWeb.ViewModels.ProductViewModel
@using Microsoft.AspNetCore.Mvc.Rendering
<!--Làm ơn đọc cái note t ghi trước khi nhắn hỏi-->
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<div class="container mt-4">
    <h2 class="mb-3">Thêm sản phẩm mới</h2>

    <div asp-validation-summary="All" class="alert alert-danger"></div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-8">
                <!-- Tên sản phẩm -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Giá -->
                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Số lượng tồn -->
                <div class="mb-3">
                    <label asp-for="Stock" class="form-label"></label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <!-- Mô tả -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Danh mục -->
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">Danh mục</label>
                    <select asp-for="CategoryId" class="form-select"
                            asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <!-- URL ảnh nếu đưa ảnh vào project rồi -->
                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">Nhập URL ảnh (tùy chọn)</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <!-- Specifications -->
                <div class="mb-3">
                    <h5>Thông số kỹ thuật</h5>
                    <textarea name="SpecificationsText" class="form-control" rows="6"
                              placeholder="Mỗi dòng: Thông số: Giá trị"></textarea>
                    <small class="text-muted">Ví dụ: Socket: LGA 1151</small>
                </div>
            </div>

            <!-- Upload ảnh nếu có ảnh ở ngoài-->
            <div class="col-md-4">
                <div class="mb-3">
                    <label class="form-label">Upload ảnh sản phẩm</label>
                    <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                    <small class="text-muted">Hỗ trợ JPG, PNG, WEBP, tối đa ~5MB.</small>
                </div>
            </div>
        </div>

        <!-- Nút lưu -->
        <div class="mt-3">
            <button type="submit" class="btn btn-success">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
